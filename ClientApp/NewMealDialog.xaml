<Window x:Class="SuperMarketPlanner.NewMealDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Meal" Height="101" Width="300" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <StackPanel Orientation="Vertical" Height="100">
        <StackPanel Orientation="Horizontal">
            <Label Content="Meal"/>
            <TextBox x:Name="newMeal" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Height="10"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Width="75" Grid.Column="3"  Click="okButtonClick">OK</Button>
            <Button Width="75" Grid.Column="1" Click="cancelButtonClick">Cancel</Button>
        </Grid>

    </StackPanel>
</Window>
