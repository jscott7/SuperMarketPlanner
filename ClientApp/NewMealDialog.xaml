<Window x:Class="SuperMarketPlanner.NewMealDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Meal" Height="261" Width="300" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <StackPanel Orientation="Vertical" Height="220">
        <StackPanel Orientation="Horizontal">
            <Label Content="Meal"/>
            <TextBox x:Name="newMeal" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Click="okButtonClick">OK</Button>
            <Button Click="cancelButtonClick">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
