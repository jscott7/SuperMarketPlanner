<Window x:Class="SuperMarketPlanner.DateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New List" Height="261" Width="300" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <StackPanel Orientation="Vertical" Height="220">
        <Calendar Name="calendar" Height="170" Width="180" />
        <StackPanel Orientation="Horizontal">
            <Label>For</Label>
            <TextBox Name="chosenNumber" Width="50">7</TextBox>
            <ComboBox Name="units" Width="70">
                <ComboBoxItem Content="Days" IsSelected="True" />
                <ComboBoxItem Content="Weeks" />
                <ComboBoxItem Content="Months" />
            </ComboBox>

        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Click="okButtonClick">OK</Button>
            <Button Click="cancelButtonClick">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
